<!DOCTYPE html>
<html>

<head>
  <%- include("function/header.ejs") %>
  <style>

  </style>
  <title>Thống kê</title>

</head>

<body>

  <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper" style="width: 100%;">

      <!-- Sidebar -->
      <%- include("function/menubar.ejs") %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include("function/navbar.ejs") %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800" style="text-align: center;">Trang quản lý nhân viên</h1>


            <!-- Content Row -->
            <div class="btn btn-primary">
              <a href="/dangki" style="color: white; text-decoration: none;"> Thêm người dùng</a>

            </div>
            <table class="table table-sm ">
              <thead>
                <tr style="background: aquamarine;">
                  <th scope="col">Stt</th>
                  <th scope="col">Username</th>
                  <th scope="col">Role</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Ngày đăng kí</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i< data.length; i++) { %>
                <tr>
                  <th><%= i+1 %></th>
                  <th><%= data[i].username %> </th>
                  <th> <%= data[i].role %></th>
                  <th> <%= data[i].phone %></th>
                  <th> <%= data[i].ngaydk %></th>
                  <!-- Đổi mật khẩu -->
                  <th>
                    <form action="/doimatkhau" method="post">
                      <input type="hidden" name="username" class="form-control" id="hoten" placeholder="Enter name"
                        value="<%= data[i].username %>">
                      <button type="submit" name="create" class="btn btn-primary">Đổi mật khẩu</button>
                    </form>
                  </th>


                  <!-- Đánh giá khóa học - start -->
                  <th>
                    <form action="/suanhanvien" method="post">
                      <input type="hidden" name="username" class="form-control" id="hoten" placeholder="Enter name"
                        value="<%= data[i].username %>">
                      <button type="submit" name="create" class="btn btn-warning">Sửa</button>
                    </form>
                  </th>
                  <!-- Thêm khóa học - start -->
                  <th>
                    <form action="/xoanhanvien" method="post">
                      <input type="hidden" name="username" class="form-control" id="hoten" placeholder="Enter name"
                        value="<%= data[i].username %>">
                      <button type="submit" name="create" class="btn btn-danger">Xóa</button>
                    </form>
                  </th>



                  <%};%>
              </tbody>
            </table>

            <!-- /.container-fluid -->

          </div>
          <!-- End of Main Content -->


          <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

      </div>
      <!-- End of Page Wrapper -->

      <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
      </a>

      <!-- Logout Modal-->
      <%- include("function/logout.ejs") %>


      <!-- Bootstrap core JavaScript-->
      <script src="vendor/jquery/jquery.min.js"></script>
      <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

      <!-- Core plugin JavaScript-->
      <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

      <!-- Custom scripts for all pages-->
      <script src="js/sb-admin-2.min.js"></script>
  </body>

</html>